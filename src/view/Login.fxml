            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="778.0" spacing="20.0">
               <children>
                  <ImageView fitHeight="121.0" fitWidth="107.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/icons/IDPicon.png" />
                     </image>
                  </ImageView>
                  <Label styleClass="main-title" text="IGLESIA DE DIOS DE LA PROFECÍA" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox alignment="CENTER" layoutX="199.0" layoutY="131.0" prefHeight="220.0" prefWidth="290.0" spacing="20.0">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/icons/user.png" />
                     </image>
                  </ImageView>
                  <JFXTextField fx:id="txtUsuario" focusColor="#ce0819" labelFloat="true" prefHeight="30.0" prefWidth="200.0" promptText="Nombre de usuario" unFocusColor="BLACK" />
