               <children>
                  <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/icons/password.png" />
                     </image>
                  </ImageView>
                  <JFXPasswordField fx:id="txtContraseña" focusColor="#ce0819" labelFloat="true" prefHeight="30.0" prefWidth="200.0" promptText="Contraseña" />
               </children>
            </HBox>
            <JFXButton buttonType="RAISED" onAction="#login" prefHeight="50.0" prefWidth="232.0" styleClass="btn--login" text="Entrar">
               <VBox.margin>
                  <Insets top="20.0" />
